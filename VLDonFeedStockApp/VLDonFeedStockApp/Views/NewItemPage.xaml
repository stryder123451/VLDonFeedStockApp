<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="VLDonFeedStockApp.Views.NewItemPage"
             Shell.PresentationMode="ModalAnimated"
             Shell.NavBarIsVisible="True"
             Title="New Item"
             xmlns:ios="clr-namespace:Xamarin.Forms.PlatformConfiguration.iOSSpecific;assembly=Xamarin.Forms.Core"
             xmlns:viewmodels="clr-namespace:VLDonFeedStockApp.ViewModels"
             x:DataType="viewmodels:NewItemViewModel"
             ios:Page.UseSafeArea="true"
             >
    <ContentPage.Content>
        <!--<RefreshView x:DataType="viewmodels:NewItemViewModel" Command="{Binding LoadItemsCommand}" IsRefreshing="{Binding IsBusy, Mode=TwoWay}">
           
        </RefreshView>-->
        <ScrollView>
            <StackLayout Spacing="5" Padding="15">
                <!--<Label IsVisible="False" Text="Имя заказа:" FontSize="Medium" />-->
                <!--<Entry IsVisible="False" Text="{Binding NewOrder.Name}" FontSize="Small"/>-->
                <Label Text="Материалы:" FontSize="Medium" />
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition></ColumnDefinition>
                        <ColumnDefinition></ColumnDefinition>
                        <ColumnDefinition></ColumnDefinition>
                        <ColumnDefinition Width="0"></ColumnDefinition>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition></RowDefinition>
                        <RowDefinition></RowDefinition>
                        <RowDefinition></RowDefinition>
                    </Grid.RowDefinitions>
                    <Switch Grid.Column="1" Toggled="isPlenka_Toggled" Grid.Row="0" VerticalOptions="CenterAndExpand" HorizontalOptions="CenterAndExpand" x:Name="isPlenka"></Switch>
                    <Label Grid.Column="0"  Grid.Row="0" VerticalOptions="CenterAndExpand" HorizontalOptions="CenterAndExpand" Text="Пленка"></Label>
                    <Entry Grid.Column="2" x:Name="PlenkaEntry" Grid.Row="0" VerticalOptions="CenterAndExpand" HorizontalOptions="FillAndExpand" Unfocused="PlenkaEntry_Unfocused" IsEnabled="False" Text="{Binding PlenkaAmount}" Keyboard="Numeric"></Entry>
                    <Entry Grid.Column="3" x:Name="PlenkaEntryHidden" Grid.Row="0" VerticalOptions="CenterAndExpand" HorizontalOptions="FillAndExpand" Keyboard="Numeric" Text="{Binding Plenka}"></Entry>
                    <Switch Grid.Column="1" Toggled="isCarton_Toggled" Grid.Row="1" VerticalOptions="CenterAndExpand" HorizontalOptions="CenterAndExpand" x:Name="isCarton"></Switch>
                    <Label Grid.Column="0"  Grid.Row="1" VerticalOptions="CenterAndExpand" HorizontalOptions="CenterAndExpand" Text="Картон" ></Label>
                    <Entry Grid.Column="2" x:Name="CartonEntry" Grid.Row="1" VerticalOptions="CenterAndExpand" HorizontalOptions="FillAndExpand" Unfocused="CartonEntry_Unfocused" IsEnabled="False" Text="{Binding CartonAmount}" Keyboard="Numeric"></Entry>
                    <Entry Grid.Column="3" x:Name="CartonEntryHidden" Grid.Row="1" VerticalOptions="CenterAndExpand" HorizontalOptions="FillAndExpand" Keyboard="Numeric" Text="{Binding Carton}"></Entry>
                    <Switch Grid.Column="1" Toggled="isPoddon_Toggled" Grid.Row="2" VerticalOptions="CenterAndExpand" HorizontalOptions="CenterAndExpand"  x:Name="isPoddon"></Switch>
                    <Label Grid.Column="0"  Grid.Row="2" VerticalOptions="CenterAndExpand" HorizontalOptions="CenterAndExpand"  Text="Поддон"></Label>
                    <Entry Grid.Column="2" x:Name="PoddonEntry"  Grid.Row="2" VerticalOptions="CenterAndExpand" HorizontalOptions="FillAndExpand" Unfocused="PoddonEntry_Unfocused" IsEnabled="False" Text="{Binding PoddonAmount}" Keyboard="Numeric"></Entry>
                    <Entry Grid.Column="3" x:Name="PoddonEntryHidden"  Grid.Row="2" VerticalOptions="CenterAndExpand" HorizontalOptions="FillAndExpand" Keyboard="Numeric" Text="{Binding Poddon}"></Entry>
                </Grid>
                <Entry IsVisible="False" Text="{Binding NewOrder.Materials}" FontSize="Small"/>
                <Label Text="Дата:" FontSize="Medium" />
                <DatePicker x:Name="DataPicker" Date="{Binding NewOrder.Data}" FontSize="Small"/>
                <Label Text="Примечание:" FontSize="Medium" />
                <Entry Text="{Binding NewOrder.Description}" FontSize="Small"/>
                <Label IsVisible="False" Text="Адрес:" FontSize="Medium" />
                <Entry IsVisible="False" Text="{Binding NewOrder.Address}" FontSize="Small"/>
                <Label IsVisible="False" Text="Организация:" FontSize="Medium" />
                <Entry IsVisible="False" Text="{Binding User.Organization}" IsEnabled="False" FontSize="Small"/>
                <Button Text="Создать" Command="{Binding CreateCommand}" ></Button>
                <Button Text="Отмена"  Command="{Binding BackCommand}"></Button>
            </StackLayout>
        </ScrollView>
    </ContentPage.Content>
    
</ContentPage>
